<%- include('includes/head'); %>

<div class="container d-flex justify-content-center">

    <section class="container-section">

        <div class="row">
            <div class="col-12">
                <div class="display-4 text-center mb-4">Agenda</div>
                <div class="lead text-center mb-5">Seus contatos estão abaixo</div>

                <%- include("includes/messages") %>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <% if(contatos.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover my-3">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th>Editar</th>
                                <th>Excluir</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td>
                                    <a href="/contato/index/<%= contato._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </td>
                                <td>
                                    <a href="/contato/delete/<%= contato._id %>" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i> Excluir
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <p class="lead text-center">Ainda não existem contatos na Agenda</p>
                <% } %>
            </div>
        </div>
    </section>
</div>

<%- include('includes/footer'); %>