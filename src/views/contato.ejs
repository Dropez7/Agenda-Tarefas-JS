<%- include('includes/head'); %>


<div class="container d-flex justify-content-center">

    <section class="container-section">

        <div class="row">
            <div class="col-12">
                <div class="display-4 text-center">Contato</div>
                <div class="lead text-center">Crie ou edite seus contatos a vontade!</div>

                <%- include("includes/messages") %>
            </div>
        </div>

        <div class="row mt-5 text-left justify-content-center">
            <div class="col-lg-6">

                <form action="/contato/register" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="form-group">

                        <label for="nome text-left">Nome</label>
                        <input type="text" class="form-control" id="nome" name="nome" value="<%= contato.nome %>" required >

                        <label for="sobrenome">Sobrenome</label>
                        <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%= contato.sobrenome %>">

                        <label for="email">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= contato.email %>">

                        <label for="telefone">Telefone</label>
                        <input type="text" class="form-control" id="telefone" name="telefone" value="<%= contato.telefone %>">

                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Salvar</button>
                </form>
            </div>
        </div>


    </section>
</div>
<%- include('includes/footer'); %>